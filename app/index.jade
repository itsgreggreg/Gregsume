    #main-column
      #identity
        #icon
          img(src="images/cycle.png", alt="Cycle logo")
        h1#name= resume.identity.name
        #tagline
          = resume.identity.tagline
          .sup &#8482;
        #subtag= resume.identity.subtag
        #links
          - for link in resume.identity.links
            a(href= link.url)= link.title
            .middot &middot;

      .section.expertise
        - section = resume.sections.expertise
        h2.section-title= section.title
        .contents
          .description!= section.description

      .section.skills
        - section = resume.sections.skills
        h2.section-title= section.title
        .contents.tags
          - for tag in section.tags
            .tag= tag

      .section
        - section = resume.sections.experience
        h2.section-title= section.title
        .contents
          - for job in section.jobs
            .entry
              .job-title
                .position= job.title
                .at
                  | at
                - if(job.website)
                  a.employer(href=job.website[0])
                    = job.employer
                    img.external-link(src="images/external-link.png", alt="external link")
                - else
                  .employer
                    = job.employer
              - if(job.dates && false)
                .dates
                  .middot &middot; 
                  = job.dates
              .description
                .middot &middot;
                != job.description
              .tags
                - for tag in job.tags
                  .tag= tag
      .section
        - section = resume.sections.education
        h2.section-title= section.title
        .contents
          - for school in section.schools
            .job-title
              = school.name
              br
              .employer= school.degree
            .description
              - if(school.name.trim() === "California State University Northridge")
                img.logo(src= "images/csun_seal.png", alt="CSUN Logo")
              .middot &middot;
              != school.description
      .section
        - section = resume.sections.extra
        h2.section-title= section.title
        .contents
          .project-icons
            - for project in section.projects
              a.project-icon(href=project.url)
                - var project_icon = "images/"+project.icon
                img(src=project_icon, alt=project.title)

      .view-on-github
        a(href='https://github.com/itsgreggreg/Gregsume') View this project on github.

