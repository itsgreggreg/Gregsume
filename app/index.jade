    #main-column
      #identity
        h1#name= resume.identity.name
        #tagline
          = resume.identity.tagline
        #subtag= resume.identity.subtag
        #links
          - for link in resume.identity.links
            a(href= link.url)= link.title
            .middot &middot;

      .section.expertise
        - section = resume.sections.expertise
        h2.section-title= section.title
        .contents
          .description!= section.description

      .section.skills
        - section = resume.sections.skills
        h2.section-title= section.title
        .contents.tags
          - for tag in section.tags
            .tag= tag

      .section
        - section = resume.sections.experience
        h2.section-title= section.title
        .contents
          - for job in section.jobs
            .entry
              .job-title
                .position= job.title
                .at
                  | at
                - if(job.website)
                  a.employer(href=job.website[0])
                    = job.employer
                    img.external-link(src="images/external-link.png", alt="external link")
                - else
                  .employer
                    = job.employer
              - if(job.dates && false)
                .dates
                  .middot &middot; 
                  = job.dates
              .description
                .middot &middot;
                != job.description
              .tags
                - for tag in job.tags
                  .tag= tag
      .section
        - section = resume.sections.education
        h2.section-title= section.title
        .contents
          - for school in section.schools
            .job-title
              = school.name
              br
              .employer= school.degree
            .description
              .middot &middot;
              != school.description

      .view-on-github
        a(href='https://github.com/itsgreggreg/Gregsume') View this project on github.

